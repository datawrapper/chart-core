{
    "name": "@datawrapper/chart-core",
    "version": "8.2.1",
    "description": "Svelte component to render charts. Used by Sapper App and Node API.",
    "main": "index.js",
    "files": [
        "dist",
        "lib"
    ],
    "scripts": {
        "format": "prettier 'lib/**/*.{js,html,svelte}' --write",
        "build": "rollup -c rollup.config.js",
        "dev": "rollup -cw rollup.config.js",
        "lint": "prettier --check 'lib/**/*.{js,html,svelte}' && eslint 'lib/**/*.{js,svelte}'",
        "prepublishOnly": "npm run build && npm run update:locales",
        "update:locales": "node scripts/update-translations.js",
        "prepare": "npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/datawrapper/chart-core.git"
    },
    "author": "",
    "bugs": {
        "url": "https://github.com/datawrapper/chart-core/issues"
    },
    "homepage": "https://github.com/datawrapper/chart-core#readme",
    "dependencies": {
        "@babel/core": "7.9.0",
        "@babel/plugin-transform-runtime": "7.9.0",
        "@babel/preset-env": "7.9.0",
        "@babel/runtime": "7.9.2",
        "@datawrapper/polyfills": "2.0.0-0",
        "@datawrapper/shared": "0.23.1",
        "@rollup/plugin-commonjs": "11.0.2",
        "@rollup/plugin-node-resolve": "7.1.1",
        "babel-eslint": "10.1.0",
        "core-js": "3.6.4",
        "fontfaceobserver": "2.1.0",
        "rollup": "2.1.0",
        "rollup-plugin-babel": "4.4.0",
        "rollup-plugin-svelte": "5.1.1",
        "rollup-plugin-terser": "5.3.0",
        "svelte": "3.20.1"
    },
    "devDependencies": {
        "babel-plugin-transform-async-to-promises": "0.8.15",
        "country-emoji": "~1.5.0",
        "eslint": "~6.8.0",
        "eslint-plugin-svelte3": "~2.7.3",
        "googleapis": "~48.0.0",
        "husky": "~4.2.3",
        "lint-staged": "~10.0.8",
        "prettier": "~1.19.1",
        "prettier-plugin-svelte": "~0.7.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,svelte}": [
            "prettier --write",
            "eslint"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 100,
        "singleQuote": true
    },
    "eslintIgnore": [
        "vendor",
        "dist"
    ],
    "eslintConfig": {
        "parser": "babel-eslint",
        "plugins": [
            "svelte3"
        ],
        "overrides": [
            {
                "files": [
                    "**/*.svelte"
                ],
                "processor": "svelte3/svelte3"
            }
        ],
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        }
    }
}
