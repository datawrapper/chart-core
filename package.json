{
    "name": "@datawrapper/chart-core",
    "version": "6.0.0",
    "description": "Svelte component to render charts. Used by Sapper App and Node API.",
    "main": "index.js",
    "files": [
        "index.js",
        "main.js",
        "main.legacy.js",
        "dist",
        "lib",
        "scripts",
        "rollup.config.js"
    ],
    "scripts": {
        "format": "prettier 'lib/**/*.{js,html,svelte}' --write",
        "build": "rollup -c rollup.config.js",
        "cp:vendor": "cp -r vendor/ dist/core/",
        "lint": "prettier --check 'lib/**/*.{js,html,svelte}' && eslint 'lib/**/*.{js,svelte}'",
        "prepublishOnly": "rm -r dist && mkdir dist && npm run build && npm run cp:vendor && npm run update:locales",
        "update:locales": "node scripts/update-translations.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/datawrapper/chart-core.git"
    },
    "author": "",
    "bugs": {
        "url": "https://github.com/datawrapper/chart-core/issues"
    },
    "homepage": "https://github.com/datawrapper/chart-core#readme",
    "dependencies": {
        "@babel/core": "7.8.7",
        "@babel/plugin-transform-runtime": "7.8.3",
        "@babel/preset-env": "7.8.7",
        "@babel/runtime": "7.8.7",
        "babel-eslint": "10.1.0",
        "core-js": "3.6.4",
        "@datawrapper/shared": "0.23.0",
        "fontfaceobserver": "2.1.0",
        "svelte": "3.19.2",
        "rollup": "1.32.0",
        "rollup-plugin-babel": "4.3.3",
        "@rollup/plugin-commonjs": "11.0.2",
        "@rollup/plugin-node-resolve": "7.1.1",
        "rollup-plugin-output-manifest": "1.0.2",
        "rollup-plugin-svelte": "5.1.1",
        "rollup-plugin-terser": "5.2.0"
    },
    "devDependencies": {
        "country-emoji": "~1.5.0",
        "eslint": "~6.8.0",
        "eslint-plugin-svelte3": "~2.7.3",
        "googleapis": "~47.0.0",
        "husky": "~4.2.3",
        "lint-staged": "~10.0.8",
        "prettier": "~1.19.1",
        "prettier-plugin-svelte": "~0.7.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,svelte}": [
            "prettier --write",
            "eslint"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 100,
        "singleQuote": true
    },
    "eslintIgnore": [
        "vendor",
        "dist"
    ],
    "eslintConfig": {
        "parser": "babel-eslint",
        "plugins": [
            "svelte3"
        ],
        "overrides": [
            {
                "files": [
                    "**/*.svelte"
                ],
                "processor": "svelte3/svelte3"
            }
        ],
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        }
    }
}
