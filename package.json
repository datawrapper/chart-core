{
    "name": "@datawrapper/chart-core",
    "version": "8.22.2",
    "description": "Svelte component to render charts. Used by Sapper App and Node API.",
    "main": "index.js",
    "files": [
        "dist",
        "lib"
    ],
    "scripts": {
        "format": "prettier 'lib/**/*.{js,html,svelte}' --write",
        "build": "rollup -c rollup.config.js",
        "dev": "rollup -cw rollup.config.js",
        "lint": "prettier --check 'lib/**/*.{js,html,svelte}' && eslint 'lib/**/*.{js,svelte}'",
        "prepublishOnly": "npm run build",
        "prepare": "npm run build",
        "test": "ava",
        "docs:parser": "jsdoc2md  --template docs/.tpl.hbs --files 'lib/dw/utils/parser.js' -g grouped  | sed '/\\*\\*Kind\\*\\*/d'  | sed '/\\*\\*Example\\*\\*/d' | sed '/## $/d' | sed 's/## \\([a-z]\\)/### \\1/' > docs/parser.md && node docs/.fix.js parser.md"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/datawrapper/chart-core.git"
    },
    "author": "",
    "bugs": {
        "url": "https://github.com/datawrapper/chart-core/issues"
    },
    "homepage": "https://github.com/datawrapper/chart-core#readme",
    "dependencies": {
        "@datawrapper/expr-eval": "^2.0.2-datawrapper.1",
        "@datawrapper/polyfills": "2.1.0",
        "@datawrapper/shared": "^0.27.9",
        "core-js": "3.6.5",
        "fontfaceobserver": "2.1.0",
        "svelte-extras": "^2.0.2",
        "svelte2": "npm:svelte@^2.16.1",
        "underscore": "^1.11.0"
    },
    "devDependencies": {
        "@babel/core": "7.9.0",
        "@babel/plugin-transform-runtime": "7.9.0",
        "@babel/preset-env": "7.9.5",
        "@babel/runtime": "7.9.2",
        "@rollup/plugin-commonjs": "11.0.2",
        "@rollup/plugin-node-resolve": "7.1.3",
        "@rollup/plugin-replace": "~2.3.2",
        "ava": "^3.8.1",
        "babel-eslint": "10.1.0",
        "babel-plugin-transform-async-to-promises": "0.8.15",
        "eslint": "~6.8.0",
        "eslint-plugin-svelte3": "~2.7.3",
        "esm": "^3.2.25",
        "husky": "~4.2.5",
        "jsdoc-to-markdown": "^5.0.0",
        "lint-staged": "^10.1.7",
        "node-fetch": "^2.6.0",
        "prettier": "~1.19.1",
        "prettier-plugin-svelte": "~0.7.0",
        "rollup": "2.6.1",
        "rollup-plugin-babel": "4.4.0",
        "rollup-plugin-svelte": "5.2.1",
        "rollup-plugin-terser": "^7.0.0",
        "svelte": "3.23.2"
    },
    "ava": {
        "require": [
            "esm"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,svelte}": [
            "prettier --write",
            "eslint"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 100,
        "singleQuote": true
    },
    "eslintIgnore": [
        "vendor",
        "dist",
        "dw.js"
    ],
    "eslintConfig": {
        "parser": "babel-eslint",
        "plugins": [
            "svelte3"
        ],
        "overrides": [
            {
                "files": [
                    "**/*.svelte"
                ],
                "processor": "svelte3/svelte3"
            }
        ],
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        }
    }
}
