{
    "name": "@datawrapper/chart-core",
    "version": "1.0.1",
    "description": "Svelte component to render charts. Used by Sapper App and Node API.",
    "main": "main.js",
    "files": [
        "dist",
        "lib"
    ],
    "scripts": {
        "format": "prettier 'lib/**/*.{js,html,svelte}' --write",
        "build": "rollup -c rollup.config.js",
        "cp:vendor": "cp -r vendor dist/vendor",
        "lint": "prettier --check 'lib/**/*.{js,html,svelte}' && eslint 'lib/**/*.{js,svelte}'",
        "prepublishOnly": "npm run build && npm run cp:vendor"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/datawrapper/chart-core.git"
    },
    "author": "",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/datawrapper/chart-core/issues"
    },
    "homepage": "https://github.com/datawrapper/chart-core#readme",
    "dependencies": {
        "@datawrapper/shared": "0.11.0",
        "fontfaceobserver": "2.1.0",
        "svelte": "3.6.8"
    },
    "devDependencies": {
        "@babel/core": "~7.5.5",
        "@babel/plugin-transform-runtime": "~7.5.5",
        "@babel/preset-env": "~7.5.5",
        "@babel/runtime": "^7.5.5",
        "babel-eslint": "~10.0.2",
        "core-js": "3.1.4",
        "eslint": "~6.1.0",
        "eslint-plugin-svelte3": "~2.7.3",
        "husky": "~3.0.1",
        "lint-staged": "~9.2.0",
        "prettier": "~1.18.2",
        "prettier-plugin-svelte": "~0.7.0",
        "rollup": "~1.17.0",
        "rollup-plugin-babel": "~4.3.3",
        "rollup-plugin-commonjs": "~10.0.1",
        "rollup-plugin-node-resolve": "~5.2.0",
        "rollup-plugin-svelte": "~5.1.0",
        "rollup-plugin-terser": "~5.1.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,svelte}": [
            "prettier --write",
            "eslint",
            "git add"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "printWidth": 100,
        "singleQuote": true
    },
    "eslintIgnore": [
        "vendor",
        "dist"
    ],
    "eslintConfig": {
        "parser": "babel-eslint",
        "plugins": [
            "svelte3"
        ],
        "overrides": [
            {
                "files": [
                    "**/*.svelte"
                ],
                "processor": "svelte3/svelte3"
            }
        ],
        "rules": {
            "no-console": [
                "error",
                {
                    "allow": [
                        "warn",
                        "error"
                    ]
                }
            ],
            "camelcase": [
                "warn",
                {
                    "ignoreDestructuring": true,
                    "properties": "never"
                }
            ]
        }
    }
}
